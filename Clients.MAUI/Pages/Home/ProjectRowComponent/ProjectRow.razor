@using Clients.MAUI.Pages.Home.ProjectCard
@using SharedLibrary.ApiMessages.Projects.Dto
<MudPaper Class=@Class Elevation="4" Height=@Height>
    @if (Projects.Count > 0)
    {
        @foreach (var project in Projects)
        {
            <ProjectCard Class="flex-none fade-in" Style=" height: 240px; width: 430px" Project="@project" />
        }
    }
    else
    {
        <MudText Typo="Typo.body1">Not found</MudText>
    }
</MudPaper>

@code {
    [Parameter] public IReadOnlyCollection<ProjectShortDto> Projects { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public string Height { get; set; }
}