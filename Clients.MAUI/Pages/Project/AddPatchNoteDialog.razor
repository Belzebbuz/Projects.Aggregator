<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Добавить запись в список изменений
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" @bind-Value=@_patchNoteValue Lines="5" Variant="Variant.Outlined" Placeholder="Описание изменения" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Назад</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="Submit">Добавить</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private string _patchNoteValue { get; set; }
    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_patchNoteValue));
    }
    void Cancel() => MudDialog.Cancel();
}