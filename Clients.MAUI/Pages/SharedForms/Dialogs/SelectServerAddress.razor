<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.NetworkCell" Class="mr-3 mb-n1" />
            Установить адрес сервера
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" Variant="Variant.Outlined" @bind-Text=@ServerAddress />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Назад</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Подтвердить</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string ServerAddress { get; set; }
    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(ServerAddress));
    }
    void Cancel() => MudDialog.Cancel();
}